<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/primaryBackgroundColor">

    <com.structurecode.alto.Adapters.RecyclerViewEmptySupport
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:id="@+id/trending_list">

    </com.structurecode.alto.Adapters.RecyclerViewEmptySupport>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="visible"
        android:id="@+id/empty_view"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/headphone_logo"
            android:layout_gravity="center"
            android:padding="@dimen/activity_horizontal_margin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trending_empty"
            android:padding="@dimen/activity_horizontal_margin"
            android:textSize="@dimen/smallx_sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recom_empty2"
            android:textSize="@dimen/smallx_sp"
            android:gravity="center"/>

    </LinearLayout>

</RelativeLayout>