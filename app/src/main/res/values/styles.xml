<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

    </style>

    <style name="BaseTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryDark">@color/main_color_pure</item>
        <item name="colorAccent">@color/main_color</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="LaunchTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryDark">@color/main_color_pure</item>
        <item name="colorAccent">@color/main_color</item>
        <item name="android:textColorPrimary">@color/main_color</item>
        <item name="android:windowBackground">@color/main_color</item>
    </style>

    <style name="TrackSelectionDialogThemeOverlay" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="windowNoTitle">false</item>
    </style>
</resources>
